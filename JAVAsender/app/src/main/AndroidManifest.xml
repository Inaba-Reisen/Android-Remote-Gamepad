<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pers.jiahaogao.phonekeymouse">

    <uses-permission android:name="android.permission.INTERNET"></uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PhoneKeyMouse">
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ConnectActivity" />

        <activity
            android:name=".ZxcFullActivity"
            android:label="ZXC Full"
            android:screenOrientation="landscape" />
        <activity
            android:name=".ZxcLeftActivity"
            android:label="ZXC Left"
            android:screenOrientation="landscape" />
        <activity
            android:name=".ZxcRightActivity"
            android:label="ZXC Right"
            android:screenOrientation="landscape" />
        <activity
            android:name=".WasdMainActivity"
            android:label="WSAD Main"
            android:screenOrientation="landscape" />
        <activity
            android:name=".WasdNumActivity"
            android:label="WSAD Num"
            android:screenOrientation="landscape" />

    </application>

</manifest>